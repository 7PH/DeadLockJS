{
    "compilerOptions": {
        "module": "commonjs",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "./dist/",
        "target": "esnext",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
